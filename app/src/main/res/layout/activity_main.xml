<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    tools:context=".MainActivity"
    android:id="@+id/r"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pause"
        android:id="@+id/btn_pause"
        android:onClick="pauseGame"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_pause"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_below="@id/chronometer"
            android:id="@+id/h1"

            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_below="@id/chronometer"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/h2"
            android:id="@+id/h2"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_below="@id/chronometer"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/h2"
            android:id="@+id/h3"

            />
    </LinearLayout>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:textColor="@color/white"

        android:textSize="30dp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="230dp"
        android:layout_above="@id/harrys"
        android:id="@+id/squers"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/a1"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/a2"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/a3"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/a4"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/a5"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/b1"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/b2"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/b3"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/b4"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/b5"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/c1"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/c2"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/c3"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/c4"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/c5"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/d1"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/d2"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/d3"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/d4"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/d5"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/e1"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/e2"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/e3"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/e4"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/newmagic"
                android:id="@+id/e5"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
    android:layout_height="140dp"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:id="@+id/harrys"
    android:layout_marginBottom="60dp">
    <ImageView
        android:id="@+id/pic1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/harry"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/pic2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/harry"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/pic3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/harry"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/pic4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/harry"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/pic5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/harry"
        android:layout_weight="1"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/arrows"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/left"
                android:id="@+id/btn_left"
                android:layout_marginLeft="2dp"

                />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/right"
                android:layout_marginRight="2dp"
                android:id="@+id/btn_right"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>